<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Kickball Teams</title>
  <link href="styles.css" media="screen" rel="stylesheet"/>
</head>
<body>
  <h1>Kickball Teams</h1>

  <ol>
    <% @teams.uniq.each do |team| %>
    <li>
      <a href="<%= url("/teams/#{team}") %>">
        <%= team %>
      </a>
    </li>
    <% end %>
  </ol>

  <h3>Positions</h3>

  <ol>
    <% @positions.uniq.each do |position| %>
    <li>
      <a href="<%= url("/positions/#{position}") %>">
        <%= position %>
      </a>
    </li>
    <% end %>
  </ol>



</body>
</html>
