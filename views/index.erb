<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Kickball Teams</title>
  <link href="styles.css" media="screen" rel="stylesheet"/>

</head>
<body>
  <div class="title1-container">
    <h1 class="title">Kickball Teams</h1>
  </div>

  <div class="team-container">
    <ol>
      <% @teams.uniq.each do |team| %>
      <li>
        <a class="links" href="<%= url("/teams/#{team}") %>">
          <%= team %>
        </a>
      </li>
      <% end %>
    </ol>
  </div>

  <div class="title2-container">
    <h1 class="title">Positions</h1>
  </div>

  <div class="positions-container">
    <ol>
      <% @positions.uniq.each do |position| %>
      <li>
        <a class="links" href="<%= url("/positions/#{position}") %>">
          <%= position %>
        </a>
      </li>
      <% end %>
    </ol>
  </div>


</body>
</html>
